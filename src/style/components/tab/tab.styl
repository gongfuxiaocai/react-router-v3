._tab
    width: 100%;

    ._tab_head_box
        width: 100%;
        padding-top: 6px;
        overflow: hidden;

        ._tab_head
            display: inline-block;
            padding: 4px 24px;
            color: #000;
            cursor: pointer;
            margin-right: 4px;
            border-radius: 3px 3px 0 0;
            border: 1px #dfdfdf solid;
            border-bottom: none;

        ._tab_active
            background-color: #4c8dee;
            color: #fff;
            cursor: default;

    ._tab_panel_box
        width: 100%;
        height: 200px;
        border: 1px #dfdfdf solid;

        ._tab_panel
            display: none;

        ._tab_show
            display: block;