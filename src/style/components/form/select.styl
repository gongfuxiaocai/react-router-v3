@import '../common/scroll.styl'

._select
  width: 100%
  height: 32px
  line-height 32px
  position: relative
  box-sizing border-box

  ._select_title
    text-indent: 4px
    border: 1px #dfdfdf solid
    cursor: default
    box-sizing border-box

  ._select_disabled
    background-color: #ddd
    cursor: not-allowed

  ._select_options_box
    box-sizing border-box
    position: absolute
    top: 32px
    left: 0
    width: 100%
    border 1px #dfdfdf solid
    overflow-x: hidden
    overflow-y: auto

    scroll_scrollbar
    scroll_piece
    scroll_thumb

    li
      line-height: 28px
      &:hover
        background-color: #efefef
        cursor: pointer

    ._select_disabled
      background-color: #ddd
      cursor: not-allowed
      &:hover
        background-color: #ddd
        cursor not-allowed